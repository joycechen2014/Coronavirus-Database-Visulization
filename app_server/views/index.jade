extends layout

block content
  h1= title
  p 
      form(method='', action='')
      table(border='1', align='left')
        caption Registration form
        tbody
          tr
            th Enter your first name
            td
              input(type='text', name='fn', maxlength='10', title='enter your first name', placeholder='enter your first name', required='')
          tr
            th Enter your last name
            td
              input(type='text')
          tr
            th Enter your password
            td
              input(type='password')
          tr
            th ReEnter your password
            td
              input(type='password')
          tr
            th Enter your email
            td
              input(type='email',placeholder='xxxx@xxx.xxx')
          tr
            th Enter your mobile
            td
              input(type='number',placeholder='(xxx)xxx-xxxx')
          tr
            td(colspan='2', align='center')
              input(type='submit', value='Submit')
              input(type='reset', value='Clear')
  